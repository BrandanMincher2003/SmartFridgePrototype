<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.ffsmartapplication.controllers.AdminController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Button maxWidth="80" onAction="#handleBack" text="Back" />

    <Text style="-fx-font-size: 20; -fx-font-weight: bold;" text="Admin Panel" />

    <Button onAction="#handleViewStock" style="-fx-pref-width: 200;" styleClass="text-field" stylesheets="@../../../styles/admin.css" text="View Stock Levels" />
    <Button onAction="#handleUserDetails" style="-fx-pref-width: 200;" styleClass="text-field" stylesheets="@../../../styles/admin.css" text="User Details" />
    <Button onAction="#handleReport" style="-fx-pref-width: 200;" styleClass="text-field" stylesheets="@../../../styles/admin.css" text="Health and Safety Report" />
    <Button onAction="#handleDeliveries" style="-fx-pref-width: 200;" styleClass="text-field" stylesheets="@../../../styles/admin.css" text="Deliveries" />

</VBox>
