<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.ffsmartapplication.controllers.FrontDoorController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Back Button at top-left  -->
    <Button maxWidth="80" onAction="#handleBack" styleClass="text-field" stylesheets="@../../../styles/frontdoor.css" text="Back" />

    <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Front Door" />

    <TextField fx:id="itemNameField" promptText="Item Name" />
    <TextField fx:id="quantityField" promptText="Quantity" />

    <!-- combo box for 'Withdraw'/'Deposit'. -->
    <ComboBox fx:id="actionComboBox" promptText="Select Action" styleClass="text-field" stylesheets="@../../../styles/frontdoor.css" />

    <Button onAction="#handleConfirm" style="-fx-font-size: 16; -fx-pref-width: 120;" styleClass="green-button" stylesheets="@../../../styles/frontdoor.css" text="Confirm" />
</VBox>
